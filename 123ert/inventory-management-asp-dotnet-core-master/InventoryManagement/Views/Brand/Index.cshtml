@model IEnumerable<InventoryManagement.Models.BrandMaster>

@{
    ViewData["Title"] = "Index";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Brand</a></li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <a class="btn btn-primary" asp-action="Create">Add New</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-custom-font-size">
                                <thead>
                                    <tr>

                                        <th >
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ShortDescription)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Url)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.InfoEmail)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PhoneNumber)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ContactEmail)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.BrandValue)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>


                                            <td scope="row">
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ShortDescription)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Url)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.InfoEmail)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ContactEmail)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.BrandValue)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsActive)
                                            </td>
                                            <td>
                                                <a class="btn btn-success fa fa-edit btn-sm" asp-action="Edit" asp-route-id="@item.Id"></a>
                                                <a class="btn btn-secondary fa fa-bookmark btn-sm" asp-action="Details" asp-route-id="@item.Id"></a>
                                                <a class="btn btn-danger fa fa-trash-alt btn-sm" asp-action="Delete" asp-route-id="@item.Id"></a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

